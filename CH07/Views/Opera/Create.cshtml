@model Mod02_01.Models.Opera

@{
    ViewBag.Title = "新增歌劇";
}


    <div>
        <h1>新增歌劇</h1>

        @using (Html.BeginForm())
        {
            <div>@Html.ValidationSummary()</div>
            <fieldset>
                <legend>新增歌劇</legend>
                <div>@Html.LabelFor(m => m.Title)</div>
                <div>
                    @Html.EditorFor(m => m.Title)
                    @Html.ValidationMessageFor(m => m.Title, "*")
                </div>
                <div>@Html.LabelFor(m => m.Year)</div>
                <div>
                    @Html.EditorFor(m => m.Year)
                    @Html.ValidationMessageFor(m => m.Year, "*")
                </div>
                <div>@Html.LabelFor(m => m.Composer)</div>
                <div>
                    @Html.EditorFor(m => m.Composer)
                    @Html.ValidationMessageFor(m => m.Composer, "*")
                </div>
                <div>
                    <input type="submit" value="新增" />
                </div>
            </fieldset>
        }
        <p>
            @Html.ActionLink("回歌劇列表", "Index")
        </p>




    </div>

    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
